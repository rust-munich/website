/* Main stylesheet inspired by rust-linz.at and Rust blog styling */
:root {
    --bg: #ffffff;
    --fg: #20201f;
    --muted-bg: #f6f6f6;
    --border: #e6e6e6;
    --link: #ffc832; /* Rust yellow */
    --accent: #ce422b; /* Rust red */
    --rust-orange: #dea584;
}

html {
    font-size: 100%;
}

body {
    margin: 0;
    padding: 0;
    background: var(--bg);
    color: var(--fg);
    font-family: "Source Serif 4", ui-serif, Georgia, serif;
    line-height: 1.6;
}

a {
    color: var(--link);
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-bottom-color 0.2s ease;
}

a:hover,
a:focus {
    border-bottom-color: var(--link);
}

/* Special styling for content links to get the Rust blog yellow underline effect */
.prose a,
main a {
    color: var(--fg);
    border-bottom: 2px solid var(--link);
    text-decoration: none;
}

.prose a:hover,
main a:hover,
.prose a:focus,
main a:focus {
    color: var(--link);
    border-bottom-color: var(--accent);
}

.container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1rem;
}

.site-header {
    border-bottom: 1px solid #2a2a2a;
    background: #1a1a1a;
    position: sticky;
    top: 0;
    z-index: 10;
}

.navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0;
}

.brand {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.logo-link {
    display: flex;
    align-items: center;
    border-bottom: none !important;
}

.logo-link:hover {
    border-bottom: none !important;
}

.logo-link img {
    height: 48px;
    width: 48px;
    background: #ffffff;
    border-radius: 50%;
    padding: 4px;
}

.brand-text {
    font-family:
        "Fira Sans",
        ui-sans-serif,
        system-ui,
        -apple-system,
        Segoe UI,
        Roboto,
        "Helvetica Neue",
        Arial,
        "Noto Sans",
        "Liberation Sans",
        sans-serif;
    font-weight: 700;
    font-size: 2.25rem;
    letter-spacing: 0.2px;
    color: #ffffff;
    border-bottom: none !important;
}

.brand-text:hover {
    color: var(--link);
    border-bottom: none !important;
}

.nav {
    display: flex;
    gap: 1rem;
    font-family:
        "Fira Sans",
        ui-sans-serif,
        system-ui,
        -apple-system,
        Segoe UI,
        Roboto,
        "Helvetica Neue",
        Arial,
        "Noto Sans",
        "Liberation Sans",
        sans-serif;
}

.nav a {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    border-bottom: none !important;
    color: #ffffff;
}

.nav a:hover {
    background: #2a2a2a;
    border-bottom: none !important;
    color: var(--link);
}

.nav a:focus-visible {
    outline: 2px solid var(--link);
    outline-offset: 2px;
}

.hero {
    padding: 2.5rem 0 2rem 0;
    background: var(--bg);
}

.hero h1 {
    margin: 0 0 0.5rem 0;
    font-family: "Fira Sans", ui-sans-serif, system-ui;
    font-weight: 800;
    line-height: 1.2;
}

.hero p {
    margin: 0;
    font-size: 1.125rem;
    color: #4a4a4a;
}

.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.25rem;
}

.card {
    border: 1px solid var(--border);
    background: var(--bg);
    border-radius: 8px;
    padding: 1rem;
}

.card h3 {
    margin-top: 0.25rem;
    font-family: "Fira Sans", ui-sans-serif, system-ui;
}

.meta {
    font-size: 0.95rem;
    color: #666;
}

.footer {
    margin-top: 3rem;
    padding: 2rem 0;
    border-top: 1px solid var(--border);
    color: #666;
}

.badge {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    border: 1px solid var(--border);
    border-radius: 999px;
    font-size: 0.825rem;
}

.social-links {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.social-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid var(--border);
    border-radius: 50%;
    color: var(--fg);
    transition: all 0.2s ease;
    border-bottom: none !important;
}

.social-icon:hover {
    background: var(--muted-bg);
    border-color: var(--link);
    color: var(--link);
    text-decoration: none;
    border-bottom: none !important;
}

.social-icon svg {
    width: 20px;
    height: 20px;
}

.btn {
    display: inline-block;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    border: 1px solid var(--border);
    text-decoration: none;
    font-family: "Fira Sans", ui-sans-serif, system-ui;
}

.btn-primary {
    background: var(--accent);
    color: #1b1b1b;
    border-color: var(--accent);
}

.prose h2,
.prose h3,
.prose h4 {
    font-family: "Fira Sans", ui-sans-serif, system-ui;
    margin-top: 2rem;
}

.prose img {
    max-width: 100%;
    height: auto;
}
